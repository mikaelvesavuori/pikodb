{
  "name": "pikodb",
  "description": "PikoDB is a reliable, simple, fast, no-frills key-value database",
  "version": "0.0.3",
  "author": "Mikael Vesavuori",
  "exports": {
    ".": {
      "require": "./lib/index.js",
      "import": "./lib/index.mjs"
    }
  },
  "files": [
    "/lib",
    "!/lib/**/*.map",
    "!/tests"
  ],
  "scripts": {
    "start": "npx tsx src/index.ts",
    "test": "npx vitest run --coverage",
    "build": "npm run clean && tsup src --format esm,cjs --dts && mv dist lib",
    "lint": "npx @biomejs/biome check --write ./src ./tests",
    "clean": "rm -rf test-db-*",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2",
    "@types/node": "24",
    "@vitest/coverage-v8": "4",
    "esbuild": "0",
    "husky": "9",
    "tsx": "4",
    "tsup": "8",
    "typescript": "5",
    "vitest": "4"
  }
}